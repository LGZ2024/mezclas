<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <script src="https://cdn.jsdelivr.net/npm/luxon@2.3.1/build/global/luxon.min.js"></script>
  <%- include("../../templates/admin/cabecera") %>
</head>
<style>
  .button-container {
    display: flex;
    /* Utiliza flexbox para alinear los botones */
    flex-wrap: wrap;
    /* Permite que los botones se envuelvan en múltiples líneas si es necesario */
    justify-content: space-between;
    /* Espacia los botones uniformemente */
    margin: 10px;
    /* Espaciado alrededor del contenedor */
  }

  .button-container .btn {
    flex: 1 1 150px;
    /* Permite que los botones crezcan y se encojan, con un ancho base de 150px */
    margin: 5px;
    /* Espaciado entre los botones */
    min-width: 120px;
    /* Ancho mínimo para los botones */
  }
</style>
<body>
  <div class="container-scroller ">
    <!-- navcabecera -->
    <%- include("../../templates/admin/navCabecera") %>
      <div class="container-fluid page-body-wrapper">
        <!-- nav lateral -->
        <%- include("../../templates/admin/navLateral") %>
          <div class="main-panel">
            <div class="content-wrapper">
              <div class="d-xl-flex justify-content-between align-items-start">
                <h2 class="text-dark font-weight-bold mb-2">
                  <%= titulo %>
                </h2>
              </div>
   
              <div class="button-container">
                <button type="button" class="btn btn-inverse-light btn-fw col" id="usuario">Usuarios</button>
                <button type="button" class="btn btn-inverse-primary btn-fw col" id="temporada">Temporada</button>
                <button type="button" class="btn btn-inverse-secondary btn-fw col" id="empresa">Empresa</button>
                <button type="button" class="btn btn-inverse-success btn-fw col" id="centroCoste">Centro de
                  Costo</button>
                <button type="button" class="btn btn-inverse-info btn-fw col" id="rancho">Rancho</button>
                <button type="button" class="btn btn-inverse-dark btn-fw col" id="variedad">Variedad</button>

              </div>
              <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <div class="text-center border-right border-md-0">
                        <h4>Total Gastos</h4>
                        <h1 class="text-dark font-weight-bold mb-md-3" id="gasto"></h1>
                      </div>
                      <canvas id="barChart" style="height:1024px"></canvas>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- content-wrapper ends -->
            <!-- partial:partials/_footer.html -->
            <%- include("../../templates/admin/footer") %>
              <!-- partial -->
          </div>
          <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
  </div>
  <!-- Modal -->
  <%- include("../../templates/admin/modal") %>

    <!-- container-scroller -->
    <%- include("../../templates/admin/scripts") %>
      <script type="module" src="../../../app/admin/main.js"></script>
</body>

</html>