<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>Mezclas</title>
    <link rel="stylesheet" href="../../css/mensajeNotificaciones.css">
    <link rel="stylesheet" href="../../css/spinner.css">
    <%- include("../../templates/mezclas/cabecera") %>

</head>


<body>
        <!-- Spinner de carga -->
        <div class="spinner-overlay" id="spinner" style="display: none;">
            <div class="spinner-container">
                <div class="spinner"></div>
                <p class="spinner-text">Procesando...</p>
            </div>
        </div>
    <header>
        <div class="barra contenedor">
            <div class="barra__logo">
                <img src="../img/LogoTransp.svg" alt="Logo de Viaje" style="width: 50px; height: 50px;margin: 10px">
            </div>

            <nav class="barra__navegacion">
                <a class="barra__link" id="inicio"></a>
            </nav>

            <nav class="barra__login">
                <a class="barra__link" href="/protected/cerrarSesion" id="cerrarSesion">Cerrar Sesion</a>
            </nav>
        </div>
    </header>
    <input type="hidden" value="<%= rol %>" id="rol">
    <section id="tablaFuciones" class="tablas" style="display: block;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card text-center">
                        <div class="card-body">
                            <div class="titulo">
                                <div class="col">
                                    <button class="formulario__submit" id="regresarInicio"><span
                                            class="mdi mdi-arrow-left-bold"></span></button>
                                </div>
                                <% if (rol==="mezclador" || rol==="administrativo" ) { %>
                                <div class="col-md-12 d-flex justify-content-end">
                                    <button class="btn btn-primary" id="reporte">Descargar Solicitudes</button>
                                </div>
                                <% } %>
                                <div class="text-center">
                                    <h3>Solicitudes</h3>
                                </div>
                            </div>
                            <hr>
                            <div class="table-responsive">
                                <table
                                    class="table table-striped table-bordered table-hover table-sm table-compac border-0"
                                    id="tbSolicitadas" style="white-space: nowrap;">
                                    <thead class="bg-primary">
                                        <tr class="bg-primary">
                                            <th>Solicitud</th>
                                            <th>Solicita</th>
                                            <th>Fecha de Solicitud</th>
                                            <th>Rancho destino</th>
                                            <th>Empresa</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Contenido de la tabla -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="formPreparadas" class="formularios" style="display: none;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card text-center">
                        <div class="card-body">
                            <div class="form">
                                <div class="card">
                                    <div class="titulo">
                                        <div class="col">
                                            <button class="formulario__submit" id="regresatabla"><span
                                                    class="mdi mdi-arrow-left-bold"></span></button>
                                        </div>
                                        <div class="text-center">
                                            <h3>Solicitud</h3>
                                        </div>
                                    </div>
                                    <hr>
                                    <input type="text" id="idSolicitud" disabled hidden>
                                    <% if (rol==="mezclador" || rol==="administrativo" || rol==="adminMezclador" ) { %>
                                        <div class="formulario__campo"
                                            style="display: flex; flex-direction: column; align-items: center;">
                                            <label class="formulario__label" for="folioi">Descargar Solicitud</label>
                                            <button type="button" class="btn btn-primary formulario__submit"
                                                id="descargar" style="width: 20vw;">
                                                Descargar
                                            </button>
                                        </div>
                                        <% } %>
                                            <div class="formulario__campo">
                                                <label class="formulario__label" for="folioi">Folio de Receta</label>
                                                <input type="text" class="formulario__input" id="folioi" disabled>
                                            </div>
                                            <div class="formulario__campo">
                                                <label class="formulario__label" for="solicitai">Solicita</label>
                                                <input type="text" class="formulario__input" id="solicitai" disabled>
                                            </div>
                                            <div class="formulario__campo">
                                                <label class="formulario__label" for="fechai">Fecha de Solicitud</label>
                                                <input type="text" class="formulario__input" id="fechai" disabled>
                                            </div>
                                            <div class="formulario__campo">
                                                <label class="formulario__label" for="ranchoi">Rancho Destino</label>
                                                <input type="text" class="formulario__input" id="ranchoi" disabled>
                                            </div>
                                            <div class="formulario__campo">
                                                <label class="formulario__label" for="centroCostei">Centro de
                                                    coste</label>
                                                <input type="text" class="formulario__input" id="centroCostei" disabled>
                                            </div>
                                            <div class="formulario__campo">
                                                <label class="formulario__label" for="variedadi">Variedad</label>
                                                <input type="text" class="formulario__input" id="variedadi" disabled>
                                            </div>
                                            <div class="formulario__campo">
                                                <label class="formulario__label" for="empresai">Empresa</label>
                                                <input type="text" class="formulario__input" id="empresai" disabled>
                                            </div>
                                            <div class="formulario__campo">
                                                <label class="formulario__label" for="temporadai">Temporada</label>
                                                <input type="text" class="formulario__input" id="temporadai" disabled>
                                            </div>
                                            <div class="formulario__campo">
                                                <label class="formulario__label" for="cantidadi">Cantidad de
                                                    producto</label>
                                                <input type="text" class="formulario__input" id="cantidadi" disabled>
                                            </div>
                                            <div class="formulario__campo">
                                                <label class="formulario__label"
                                                    for="presentacioni">Presentacion</label>
                                                <input type="text" class="formulario__input" id="presentacioni"
                                                    disabled>
                                            </div>
                                            <div class="formulario__campo">
                                                <label class="formulario__label" for="metodoi">Metodo de
                                                    aplicacion</label>
                                                <input type="text" class="formulario__input" id="metodoi" disabled>
                                            </div>
                                            <div class="formulario__campo">
                                                <label class="formulario__label" for="descripcioni">Descripcion</label>
                                                <input type="text" class="formulario__input" id="descripcioni" disabled>
                                            </div>
                                            <div class="formulario__campo">
                                                <label class="formulario__label">Productos</label>
                                                <button type="button" class="btn btn-primary formulario__submit"
                                                    id="receta" data-bs-toggle="modal">
                                                    Mostrar Receta
                                                </button>
                                            </div>
                                            <% if (rol==="mezclador" || rol==="administrativo") { %>
                                                <form id="formSolicutudes">
                                                    <div class="formulario__campo">
                                                        <label class="formulario__label" for="notaMezcla">Nota de
                                                            mezclador</label>
                                                        <textarea id="notaMezcla" class="formulario__input"></textarea>
                                                    </div>
                                                    <div class="formulario__campo">
                                                        <button type="submit" class="formulario__submit"
                                                            id="btnGuardarMescla" style="display: none;">Guardar
                                                            mezcla</button>
                                                    </div>
                                                </form>
                                                <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </section>

    <!-- Modal mostar receta -->
    <%- include("../../templates/mezclas/mostrarReceta") %>

        <!-- Modal nuevo producto -->
        <%- include("../../templates/mezclas/modalNuevoProducto") %>


        <%- include("../../templates/mezclas/notificacion") %>
        
        <!-- formularios para seleciona empresa -->
        <%- include("../../templates/mezclas/modalSelecionEmpresa") %>
            <!-- Firebase ConfiguraciÃ³n y funciones -->
            <%- include("../../templates/mezclas/scripts") %>
                <script type="module" src="../../app/pendientes/FuncionesAlmacen.js"></script>

</body>

</html>
