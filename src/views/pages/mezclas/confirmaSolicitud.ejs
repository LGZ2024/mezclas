<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("../../templates/head-pwa") %>
        <link rel="stylesheet" href="../../css/mensajeNotificaciones.css">
        <link rel="stylesheet" href="../../css/spinner.css">
        <%- include("../../templates/mezclas/cabecera") %>

</head>


<body>
    <!-- Spinner de carga -->
    <div class="spinner-overlay" id="spinner" style="display: none;">
        <div class="spinner-container">
            <div class="spinner"></div>
            <p class="spinner-text">Procesando...</p>
        </div>
    </div>

    <%- include("../../templates/mezclas/headerNav") %>
        <input type="hidden" value="<%= rol %>" id="rol">

        <section id="tablaFuciones" class="tablas" style="display: block;">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <div class="card text-center">
                            <div class="card-body">
                                <div class="titulo">
                                    <div class="col">
                                        <div
                                            style="display: flex; flex-direction: column; align-items: start; width: 20%;">

                                            <button class="formulario__submit" id="regresarInicio"><span
                                                    class="mdi mdi-arrow-left-bold"></span></button>
                                        </div>
                                    </div>
                                    <div class="row mb-12 justify-content-end">
                                        <div class="col-md-2 d-flex gap-2 m-2">
                                            <button type="button" class="btn btn-primary btn-fw"
                                                id="btnValidacion">Confirmar
                                                Solicitudes</button>
                                        </div>
                                    </div>
                                    <div class="text-center">
                                        <h3>Solicitudes</h3>
                                    </div>
                                </div>
                                <hr>
                                <div class="table-responsive">
                                    <table
                                        class="table table-striped table-bordered table-hover align-middle mobile-table w-100 table-sm"
                                        id="tbConfirmacion" style="white-space: nowrap;">
                                        <thead class="table-primary">
                                            <tr class="bg-primary">
                                                <th>Solicitud</th>
                                                <th>Solicita</th>
                                                <th>Fecha de Solicitud</th>
                                                <th>Rancho destino</th>
                                                <th>Empresa</th>
                                                <th>Confirmacion</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- Contenido de la tabla -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>




        <!-- Modal mostar receta -->
        <%- include("../../templates/mezclas/modalCancelacion") %>
            <%- include("../../templates/mezclas/modalRecetaConfirmacion") %>

                <!-- Firebase ConfiguraciÃ³n y funciones -->
                <%- include("../../templates/mezclas/scripts") %>
                    <script type="module" src="../../app/activos/main.js"></script>

</body>

</html>