<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("../../templates/head-pwa") %>
        <link rel="stylesheet" href="../../css/mensajeNotificaciones.css">
        <link rel="stylesheet" href="../../css/spinner.css">
        <%- include("../../templates/mezclas/cabecera") %>

</head>


<body>
    <%- include("../../templates/combustibles/nav") %>

        <input type="hidden" value="<%= rol %>" id="rol">
        <section>
            <div class="container">
                <div class="row ">
                    <div class="col-md-12">
                        <div class="card text-center">
                            <div class="card-body">
                                <div class="titulo">
                                    <div class="col">
                                        <div
                                            style="display: flex; flex-direction: column; align-items: start; width: 20%;">
                                            <button class="formulario__submit" id="regresarInicio"><span
                                                    class="mdi mdi-arrow-left-bold"></span></button>
                                        </div>
                                    </div>

                                    <div class="col-md-12 d-flex justify-content-end">
                                        <button class="formulario__submit" id="registrarUnidad">Registrar unidad
                                            Nueva</button>
                                    </div>

                                    <div class="text-center">
                                        <h3>Unidades</h3>
                                    </div>
                                </div>
                                <hr>
                                <div class="table-responsive">
                                    <table
                                        class="table table-striped table-bordered table-hover table-sm table-compac border-0"
                                        id="tbUnidades" style="white-space: nowrap;">
                                        <thead class="bg-primary">
                                            <tr class="bg-primary">
                                                <th>Id_unidad</th>
                                                <th>Numero Economico</th>
                                                <th>Marca</th>
                                                <th>Tipo</th>
                                                <th>Modelo</th>
                                                <th>Año</th>
                                                <th>Numero de serie</th>
                                                <th>Numero de Motor</th>
                                                <th>Placas</th>
                                                <th>Tipo de Combustible</th>
                                                <th>Medida de Llanta</th>
                                                <th>CIA Seguro</th>
                                                <th>Numero de Poliza</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- Los datos se llenarán dinámicamente -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%- include("../../templates/combustibles/modalUnidad") %>
            <%- include("../../templates/mezclas/scripts") %>
                <script type="module" src="../../app/vehiculos/main.js"></script>

</body>

</html>