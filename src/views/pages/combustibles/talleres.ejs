<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("../../templates/head-pwa") %>
        <link rel="stylesheet" href="../../css/mensajeNotificaciones.css">
        <link rel="stylesheet" href="../../css/spinner.css">
        <%- include("../../templates/mezclas/cabecera") %>

</head>


<body>
    <%- include("../../templates/combustibles/nav") %>
        <input type="hidden" value="<%= rol %>" id="rol">
        <section>
            <div class="container">
                <div class="row ">
                    <div class="col-md-12">
                        <div class="card text-center">
                            <div class="card-body">
                                <div class="titulo">
                                    <div class="col">
                                        <div
                                            style="display: flex; flex-direction: column; align-items: start; width: 20%;">
                                            <button class="formulario__submit" id="regresarInicio"><span
                                                    class="mdi mdi-arrow-left-bold"></span></button>
                                        </div>
                                    </div>

                                    <div class="col-md-12 d-flex justify-content-end">
                                        <button class="formulario__submit" id="registrarTaller">Registrar Taller</button>
                                    </div>

                                    <div class="text-center">
                                        <h3>Talleres</h3>
                                    </div>
                                </div>
                                <hr>
                                <div class="table-responsive">
                                    <table
                                        class="table table-striped table-bordered table-hover table-sm table-compac border-0"
                                        id="tbTalleres" style="white-space: nowrap;">
                                        <thead class="bg-primary">
                                            <tr class="bg-primary">
                                                <th scope="col">ID</th>
                                                <th scope="col">Razon Social</th>
                                                <th scope="col">Domicilio</th>
                                                <th scope="col">Contacto</th>
                                                <th scope="col">Forma de Pago</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- Los datos se llenarán dinámicamente -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
            <%- include("../../templates/combustibles/modalTaller") %>
        <%- include("../../templates/mezclas/scripts") %>
            <script type="module" src="../../app/vehiculos/main.js"></script>

</body>

</html>