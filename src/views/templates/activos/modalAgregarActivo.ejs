<div class="modal fade" id="miModal" tabindex="-1" role="dialog" aria-labelledby="miModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="miModalLabel" style="color: black;">Agregar Activo</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="formActivos">
          <div class="form-group">
            <label for="equipo">Equipo:</label>
            <select class="custom-select" name="equipo" id="equipo">
              <option value="">Seleccionar....</option>
              <option value="Laptop">Laptop</option>
              <option value="kit">Kit</option>
              <option value="Impresora">Impresora</option>
              <option value="Colectora">Colectora</option>
              <!-- <option value="Celular">Celular</option>
              <option value="Tablet">Tablet</option> -->
            </select>
          </div>
          <div class="form-group">
            <label for="marca">Marca:</label>
            <input type="text" class="form-control" name="marca" id="marca" placeholder="Marca">
          </div>
          <div class="form-group">
            <label for="modelo">Modelo:</label>
            <input type="text" class="form-control" name="modelo" id="modelo" placeholder="Modelo">
          </div>
          <div class="form-group">
            <label for="ns">Numero de serie:</label>
            <input type="text" class="form-control" name="ns" id="ns" placeholder="Numero de serie">
          </div>
          <div class="form-group">
            <label for="tag">service tag o imei:</label>
            <input type="text" class="form-control" name="tag" id="tag" placeholder="Service tag o imei">
          </div>
          <div class="form-group">
            <label for="no_economico">Numero Economico:</label>
            <input type="text" class="form-control" name="no_economico" id="no_economico"
              placeholder="Agregar numero economico">
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-primary" id="btnRegistrar">Agregar</button>
      </div>
      </form>
    </div>
  </div>
</div>