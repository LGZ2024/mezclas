<div class="modal fade" id="ModalResetPass" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Cambiar Contraseña</h1>
      </div>
      <div class="modal-body">
        <form class="forms-sample" id="formResetPass">
          <div class="form-group">
            <label for="contrasenaRes">Contraseña</label>
            <div class="password-container">
              <input type="password" class="form-control" name="contrasenaRes" id="contrasenaRes" title="La contraseña debe tener al menos 8 caracteres, incluyendo una letra mayúscula, una letra minúscula, un número y un carácter especial (@ $ ! % * ? & .)" required>
              <a href="#" class="toggle-password" id="mostrarPassRes">
                <i class="mdi mdi-eye"></i>
              </a>
            </div>
          </div>

          <div class="form-group">
            <label for="contrasenaRepRes">Repetir Contraseña</label>
            <div class="password-container">
              <input type="password" class="form-control" name="contrasenaRepRes" id="contrasenaRepRes" title="Repertir la contraseña" required>
              <a href="#" class="toggle-password" id="mostrarPassRRes">
                <i class="mdi mdi-eye"></i>
              </a>
            </div>
          </div>
        </form>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
          <button type="submit" form="formResetPass" class="btn btn-primary" id="btnRegistrar">Guardar</button>
        </div>

      </div>
    </div>
  </div>
</div>
</div>
