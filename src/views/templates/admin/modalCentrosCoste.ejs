<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel"></h1>
      </div>
      <div class="modal-body">
        <form class="forms-sample" id="formCentroCostes">
          <div class="form-group">
            <label for="centroCoste">Centro de Coste</label>
            <input type="text" class="form-control" id="centroCoste" name="centroCoste"
              placeholder="Agregar centro de coste siglas"
              title="Ejemplo de centros de coste LGFMBCE, BIOJPROA, BIOJOAPC"
              oninput="this.value = this.value.toUpperCase().replace(/[^A-Z]/g, '')" pattern="[A-Z]+" required>
          </div>
          <div class="form-group">
            <label for="centroCosteTxt">Centro de Coste texto</label>
            <input type="text" class="form-control" id="centroCosteTxt" name="centroCosteTxt"
              placeholder="Agregar centro de coste texto"
              title="Ejemplo de centros de coste: Presa Frambuesa, Rincón Frambuesa, Paraíso Maíz" required oninput="this.value = this.value
    .toLowerCase()
    .replace(/\b\w/g, c => c.toUpperCase());" style="text-transform: capitalize;">
          </div>
          <div class="form-group">
            <label for="empresa">Empresa</label>
            <select class="form-control" name="empresa" id="empresa">
              <option value="">Selecione una opcion</option>
              <option value="Bioagricultura">Bioagricultura</option>
              <option value="Moras Finas">Moras Finas</option>
              <option value="Bayas del Centro">Bayas del Centro</option>
              <option value="Lugar Agricola">Lugar Agricola</option>
            </select>

          </div>
          <div class="form-group">
            <label for="rancho">Rancho</label>
            <select name="rancho" id="rancho" class="form-control" required>
              <option value="">Seleciona una opcion</option>
              <option value="Zapote">Zapote</option>
              <option value="Seccion 7 Fresas">Seccion 7 Fresas</option>
              <option value="Santiaguillo">Santiaguillo</option>
              <option value="Romero">Santiaguillo</option>
              <option value="Rincon">Rincon</option>
              <option value="Potrero">Potrero</option>
              <option value="Paraiso">Paraiso</option>
              <option value="Ojo de Agua">Ojo de Agua</option>
              <option value="La Loma">La Loma</option>
              <option value="Jimenez">Jimenez</option>
              <option value="Guzman">Guzman</option>
              <option value="Chivas">Chivas</option>
              <option value="Casas de Altos">Casas de Altos</option>
              <option value="Atemajac">Atemajac</option>
              <option value="Ahualulco">Ahualulco</option>
              <option value="General">General</option>
            </select>
          </div>
          <div class="form-group">
            <label for="cultivo">Cultivo</label>
              <select name="cultivo" id="cultivo" class="form-control" required>
                <option value="">Seleciona una opcion</option>
                <option value="Maiz">Maiz</option>
                <option value="Zarzamora">Zarzamora</option>
                <option value="Frambueza">Frambueza</option>
                <option value="Arandano">Arandano</option>
                <option value="Fresa">Fresa</option>
                <option value="General">General</option>
              </select>
          </div>
          <div id="productosContainer">
            <label for="cultivo">Variedades</label>
            <!-- AQUI SE VAN AGREGANDO LAS VARIEDADES -->
          </div>
          <div class="form-group">
            <button type="button" class="btn  btn-inverse-primary" id="agregarProducto">
              + Agregar Producto
            </button>
          </div>
        </form>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
          <button type="submit" form="formCentroCostes" class="btn btn-primary" id="btnRegistrar">Guardar</button>
        </div>
      </div>
    </div>
  </div>
</div>